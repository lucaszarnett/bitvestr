<section class="outer-container strategies">
  <section class="inner-container">
    <h2>Your Trading Strategies</h2>

    <% if @strategies.any? %>
      <div class="strategies">
        <%= render "strategy_list" %>
      </div>
    <% else %>
      <div class="none">
        <p>
          You don't have any strategies yet.  Click the <em>New Crossover Strategy</em> or <em>New Momentum Strategy</em> button below to get started.
        </p>
      </div>
    <% end %>

    <% if current_user %>
      <div class="buttons">
        <%= link_to "New Crossover Strategy", new_strategy_crossover_path, class: 'button blue' %>
        <%= link_to "New Momentum Strategy", new_strategy_momentum_path, class: 'button blue' %>
      </div>
    <% end %>
  </section>
</section>

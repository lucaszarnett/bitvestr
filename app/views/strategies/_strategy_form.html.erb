<%= form_for @strategy, html: {class: 'strategy'} do |f| %>
  <div class="strategy">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :interval, "Tick Interval" %>
    <%= f.number_field :interval %>
  </div>

  <div class="indicators">
    <%= f.fields_for :indicators do |i| %>
      <%= render 'indicator_fields', f: i %>
    <% end %>
  </div>

  <div class="buttons">
    <%= link_to_add_association 'Add Indicator', f, :indicators, class: 'blue' %>
    <%= f.button "Save", class: 'green' %>
  </div>
<% end %>

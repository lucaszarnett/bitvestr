<h2>Sign up!</h2>

<%= form_for @user, html: { class: 'user' } do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="buttons">
    <%= f.button "Register", class: "blue" %>
  </div>
<% end %>
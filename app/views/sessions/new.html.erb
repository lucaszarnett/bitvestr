<h2>Sign in</h2>

<%= form_tag sessions_path, method: :post, class: 'user' do %>
  <div class="field">
    <%= label_tag :email, 'Email Address' %>
    <%= email_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="buttons">
    <%= button_tag "Log in!", class: 'blue' %>
  </div>
<% end %>
